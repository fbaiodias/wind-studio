{
  "version": "<%= package.version %>",
  "name": "<%= package.name %>",
  "manifest_version": 2,
  "description": "",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "chrome_url_overrides" : {
    "newtab": "new-tab.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "content_security_policy": "default-src 'self' http://localhost:3000; script-src 'self' http://localhost:3000 'unsafe-eval'; connect-src *; style-src * 'unsafe-inline'; img-src 'self' http://localhost:3000 data:;"
}
